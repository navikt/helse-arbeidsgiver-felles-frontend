{
  "rootDir": "./src",
  "globals": {
    "window": {}
  },
  "setupFilesAfterEnv": [
    "./setupTests.ts"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "\\.(css|jpg|png|svg|less|sass|scss)$": "<rootDir>/../node_modules/jest-css-modules",
    "nav-(.*)-style": "<rootDir>/../node_modules/jest-css-modules"
  },
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "preset": "ts-jest",
  "testEnvironment": "jsdom"
}
